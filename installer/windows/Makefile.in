DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
include $(DEPTH)/build/autodefs.mk

ifdef SONGBIRD_OFFICIAL
   INSTALLER_README = README_OFFICIAL.txt
else
   INSTALLER_README = README_NIGHTLY.txt
endif

SONGBIRD_PP_DIR = $(CURDIR)/..
SONGBIRD_PP_RESOURCES = $(topsrcdir)/installer/common/LICENSE.html.in \
                        $(topsrcdir)/installer/common/$(INSTALLER_README).in \
                        $(NULL)

PPDEFINES += -DSB_PLATFORM="$(SB_PLATFORM)"

SONGBIRD_LICENSE_FILE = $(SB_LICENSE_FILE)

SONGBIRD_DIST = $(topsrcdir)/TRADEMARK.txt \
                $(SONGBIRD_PP_DIR)/$(INSTALLER_README) \
                $(NULL)

ifdef SONGBIRD_OFFICIAL
SONGBIRD_DIST += $(srcdir)/songbird.ico \
                 $(srcdir)/songbird_installer.ico \
                 $(srcdir)/songbird_uninstaller.ico \
                 $(srcdir)/songbird_vista.ico \
                 $(NULL)
else
SONGBIRD_DIST += $(srcdir)/songbird_nightly.ico \
                 $(NULL)
endif

SONGBIRD_INSTALLER = common.nsh \
                     defines.nsi.in \
                     make-installer.sh \
                     PrepareInstaller.bat \
                     Songbird.nsi \
                     $(NULL)

INSTALLER_PREPROCESS = defines.nsi \
                       $(NULL)

SHELL_EXECUTE = make-installer.sh $(SB_PLATFORM)-$(SB_ARCH) $(INSTALLER_README) $(SB_BUILD_NUMBER)

include $(topsrcdir)/$(SONGBIRD_BRANDING_DIR)/branding.mk
include $(topsrcdir)/build/rules.mk

# We do this here because win32 is the only platform right now that needs it;
# see bug 13809
all:: copy_added_files_list

copy_added_files_list:
	$(CP) -dfp $(topsrcdir)/update/files-added-to-$(SB_PLATFORM) $(SONGBIRD_DISTDIR)/added-files

.PHONY: copy_added_files_list

DEPTH     = ../../..
topsrcdir = @top_srcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@

include $(DEPTH)/build/autodefs.mk

EXTRA_SCRIPT_COMPONENTS = $(srcdir)/sbLastFm.js $(srcdir)/sbLastFmProtocol.js

TARGET_COMPONENTS_DIR = ../.xpistage/components

include $(topsrcdir)/build/rules.mk

libs:: extinstall

extinstall:

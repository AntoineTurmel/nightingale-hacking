DEPTH     = ../..
topsrcdir = @top_srcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@

include $(DEPTH)/build/autodefs.mk

SUBDIRS = components \
          defaults \
          $(NULL)

EXTENSION_NAME = 7digital
EXTENSION_UUID = $(EXTENSION_NAME)@songbirdnest.com
EXTENSION_STAGE_DIR = ./.xpistage
EXTENSION_BUILD_ID = $(EXTENSION_NAME)-$(EXTENSION_VER)

# NOTE: 7digital versioning should match Songbird versioning for sanity and fun
EXTENSION_VER = $(SB_MILESTONE)
EXTENSION_MIN_VER = 1.2.0a
EXTENSION_MAX_VER = 1.2.0b1

XPI_NAME = $(EXTENSION_BUILD_ID)

JAR_MANIFEST = jar.mn
JAR_TARGET_DIR = $(EXTENSION_STAGE_DIR)/chrome

include $(topsrcdir)/build/rules.mk

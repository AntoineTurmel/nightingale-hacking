DEPTH     = ../../../../..
topsrcdir = @top_srcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@

include $(DEPTH)/build/autodefs.mk

EXTRA_SCRIPT_COMPONENTS = $(srcdir)/preferences.js \
                          $(NULL)

TARGET_DIR = ../../.xpistage/defaults/preferences

include $(topsrcdir)/build/rules.mk

all:: extinstall

extinstall:
	$(MKDIR) -p $(TARGET_DIR)
	$(CP) -f $(EXTRA_SCRIPT_COMPONENTS) $(TARGET_DIR)


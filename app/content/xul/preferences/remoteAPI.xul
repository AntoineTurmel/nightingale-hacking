<!DOCTYPE overlay [
<!ENTITY % brandDTD SYSTEM "chrome://branding/locale/brand.dtd">
<!ENTITY % nightingaleDTD SYSTEM "chrome://nightingale/locale/nightingale.dtd">
%brandDTD;
%nightingaleDTD;
]>


<overlay id="RemoteAPIPaneOverlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <prefpane id="paneRemoteAPI" flex="1">

    <preferences id="remoteAPIPreferences">
      <preference id="nightingale.rapi.playback_control_disable"
                  name="nightingale.rapi.playback_control_disable"
                  type="bool"
                  onchange="gRemoteAPIPane.onChange()"/>
      <preference id="nightingale.rapi.playback_read_disable"
                  name="nightingale.rapi.playback_read_disable"
                  type="bool"
                  onchange="gRemoteAPIPane.onChange()"/>
      <preference id="nightingale.rapi.library_read_disable"
                  name="nightingale.rapi.library_read_disable"
                  type="bool"
                  onchange="gRemoteAPIPane.onChange()"/>
      <preference id="nightingale.rapi.library_write_disable"
                  name="nightingale.rapi.library_write_disable"
                  type="bool"
                  onchange="gRemoteAPIPane.onChange()"/>
    </preferences>

    <script type="application/x-javascript" src="chrome://nightingale/content/scripts/preferences/remoteAPI.js"/>

    <vbox align="start" class="bottomBox">
      <groupbox id="rapiAccessGroup">
        <caption label="&rapi.prefpane.access.caption;"/>
        <description>&rapi.prefpane.access.text;</description>
        <grid>
          <columns>
            <column flex="1" />
            <column />
          </columns>
          <rows>
            <row>
              <checkbox preference="nightingale.rapi.playback_control_disable"
                label="&rapi.playback_control_disable.label;"
                accesskey="&rapi.playback_control_disable.accesskey;"/>
              <vbox pack="top">
                <button id="nightingale.rapi.playback_control_disable.button"
                  label="&rapi.whitelist.label;"
                  oncommand="gRemoteAPIPane.configureWhitelist('playback_control');"/>
              </vbox>
            </row>
            <row>
              <checkbox preference="nightingale.rapi.playback_read_disable"
                label="&rapi.playback_read_disable.label;"
                accesskey="&rapi.playback_read_disable.accesskey;"/>
              <vbox pack="top">
                <button id="nightingale.rapi.playback_read_disable.button"
                  label="&rapi.whitelist.label;"
                  oncommand="gRemoteAPIPane.configureWhitelist('playback_read');"/>
              </vbox>
            </row>
            <row>
              <checkbox preference="nightingale.rapi.library_read_disable"
                label="&rapi.library_read_disable.label;"
                accesskey="&rapi.library_read_disable.accesskey;"/>
              <vbox pack="top">
                <button id="nightingale.rapi.library_read_disable.button"
                  label="&rapi.whitelist.label;"
                  oncommand="gRemoteAPIPane.configureWhitelist('library_read');"/>
              </vbox>
            </row>
            <row>
              <checkbox checked="true" disabled="true"
                label="&rapi.library_write_disable.label;"
                accesskey="&rapi.library_write_disable.accesskey;"/>
              <vbox pack="top">
                <button id="nightingale.rapi.library_write_disable.button"
                  label="&rapi.whitelist.label;"
                  oncommand="gRemoteAPIPane.configureWhitelist('library_write');"/>
              </vbox>
            </row>
          </rows>
        </grid>
        <hbox class="bottomBox">
          <button label="&rapi.restore_defaults.label;"
            oncommand="gRemoteAPIPane.restoreDefaults();"/>
          <spacer flex="1"/>
        </hbox>
      </groupbox>
      <spacer flex="1"/>
    </vbox>
  </prefpane>

</overlay>

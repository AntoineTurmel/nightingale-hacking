<?xml-stylesheet href="chrome://songbird-dialogs/skin/videoWin.css" type="text/css"?>
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/content/bindings/bindings.css" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/songbird.css" type="text/css" title="Skin"?>


<!DOCTYPE window SYSTEM "chrome://songbird/locale/songbird.dtd" >
<window
  id="video_window"
  hidechrome="true"
  title="Video Window"  
  windowtype="Songbird:Core"
  onclose="return false; /*This window must never be closed unless the app is shutdown*/"
  onunload=""
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:rdf="http://www.w3.org/TR/WD-rdf-syntax#"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
>
  <!-- Scripts needed by the inline js that loads/runs before onload() -->
  <script type="application/x-javascript" 
    src="chrome://global/content/globalOverlay.js"/>  
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/windowUtils.js"/>
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/sbDataRemoteUtils.js"/>
  <script type="application/x-javascript"   
   src="chrome://songbird/content/scripts/metrics.js" />
   
  <!-- The appInit.js module calls the mainwin startup code inline during scriptinit --> 
  <!-- The appInit.js module sets up window event handlers for onload and onunload to auto-init/deinit --> 
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/appInit.js"/>
   
  <!-- The videoWinInit.js module sets up window event handlers for onload and onunload to auto-init/deinit --> 
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/videoWinInit.js"/>   

  <stringbundle id="songbird_strings" src="chrome://songbird/locale/songbird.properties"/>
  
  <sb-sys-outer-frame flex="1">
    <sb-sys-titlebar type="hide"/>

    <!-- This is for Mac -->    
    <menubar id="video_menu" hidden="false" >
      <menuitem id="menu_FileQuitItem" label="&menu.file.exit;" accesskey="&menu.file.exit.accesskey;" oncommand="quitApp();" hidden="true"/>
    </menubar>

    <hbox flex="1" id="video-box">
      <!-- video-box is the element that mediacores will use as their parent window
         for their own output window. -->
    </hbox>

  </sb-sys-outer-frame>


  <!-- Load the Mozilla helpers -->  
  <script type="application/x-javascript"   
   src="chrome://global/content/dialogOverlay.js" />

  <!-- Load the interface code -->
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/playerOpen.js"/>
   
  <!-- XXXX TODO: Migrate the "background scripts" -->
  <!--script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/watchFolders.js"/-->

  <script type="application/x-javascript"   
   src="chrome://songbird/content/scripts/globalHotKeys.js" />

  <!-- Sanitizer Support -->
  <script type="application/x-javascript" 
  src="chrome://browser/content/sanitize.js" />
  <script type="application/x-javascript" 
  src="chrome://songbird/content/scripts/sanitize.js" />
  
  <!-- 0.6 Feedback Delegate, manages prompting the user for a survey -->
  <script type="application/x-javascript"
  src="chrome://songbird/content/scripts/feedbackDelegate.js" />

   
</window>

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://nightingale/skin/nightingale.css" type="text/css"?>
<?xml-stylesheet href="chrome://nightingale/content/bindings/bindings.css" type="text/css"?>
<!DOCTYPE dialog SYSTEM "chrome://nightingale/locale/nightingale.dtd" >
<dialog
 xmlns:html="http://www.w3.org/1999/xhtml"
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
 id="restartbox"
 title=""
 buttons="accept,cancel"
 type="nightingale"
 buttonlabelaccept="&restartbox.restartnow;"
 buttonlabelcancel="&restartbox.restartlater;"
 ondialogaccept="doExit(1);"
 ondialogcancel="doExit(0);"
 hidechrome="true" 
 pack="center" >
  
  <!-- Astounding complexity! -->  
  
  <label id="nightingale_restartbox_label" value="" />
  
  <!-- And intrepid instructions! -->  
  <script type="application/x-javascript"
   src="chrome://nightingale/content/scripts/sbDataRemoteUtils.js" />
  <script type="application/x-javascript" 
    src="chrome://global/content/globalOverlay.js"/> 
  <script type="application/x-javascript"  
   src="chrome://nightingale/content/scripts/windowUtils.js" />
  <script>
  <![CDATA[
    try
    {
      if ( typeof( window.arguments[0] ) != 'undefined' )
      {
        document.getElementById("restartbox").setAttribute("title", window.arguments[0].title);
        document.getElementById("nightingale_restartbox_label").setAttribute("value", window.arguments[0].message);
      }
    }
    catch( err )
    {
      alert( "restartbox.xml - " + err );
    }
  
    function doExit(ret)
    {
      if ( typeof( window.arguments[0] ) != 'undefined' )
      {
        window.arguments[0].ret = ret;
      }
      onExit();
    }
    
  ]]>
  </script>
  
</dialog>

<?xml-stylesheet href="chrome://songbird-dialogs/skin/firstrun.css" type="text/css"?>
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/songbird.css" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/content/bindings/bindings.css" type="text/css"?>
<!DOCTYPE dialog SYSTEM "chrome://songbird/locale/songbird.dtd" >
<dialog 
 xmlns:html="http://www.w3.org/1999/xhtml"
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
 id="eula"
 title="End User License Agreement"
 buttons="accept,cancel"
 width="480"
 height="360"
 onload="return doInit();"
 ondialogaccept="return doClose('accept');"
 ondialogcancel="return doClose('cancel');"
 windowtype="Songbird:EULA"
 hidechrome="true"
 type="songbird" 
>

  <windowregion/>

  <!-- Astounding complexity! -->
  <browser id="songbird.eula" src="chrome://songbird/content/html/eula.html" flex="1"/>
  <checkbox id="songbird.accepteula" 
            label="I have read the terms of this license agreement." 
            oncommand="onAcceptChanged()"/>

  <!-- And intrepid instructions! -->  

  <script type="application/x-javascript"
    src="chrome://songbird/content/scripts/sbDataRemoteUtils.js" />
  <script type="application/x-javascript" 
    src="chrome://global/content/globalOverlay.js"/>    
  <script type="application/x-javascript"
    src="chrome://songbird/content/scripts/windowUtils.js" />

  <script>
  <![CDATA[
    var gPrefs = Components.classes["@mozilla.org/preferences-service;1"].getService(Components.interfaces.nsIPrefBranch);

    function doInit() {
      var dialog = document.documentElement;
      dialog.getButton("accept").setAttribute("label", "I Agree");
      dialog.getButton("cancel").setAttribute("label", "I Decline");
      var dialog = document.documentElement;
      onAcceptChanged();
    }

    function doClose(ret) {
      // arg[0] is the eulaData passed in from the call that opened us.
      var data = window.arguments[0];

      if ( typeof( data ) != 'undefined' ) {
        data.retval = ret;

        if ( data.retval == "accept" ) {
          gPrefs.setBoolPref("songbird.eulacheck", true);
          if ( typeof(data.acceptAction) == "function" ) {
            retval = data.acceptAction();
          }
          else {
            retval = eval(data.acceptAction);
          }
        }
        else {
          gPrefs.setBoolPref( "songbird.eulacheck", false );
          if ( typeof(data.cancelAction) == "function" ) {
            retval = data.cancelAction();
          }
          else {
            retval = eval(data.cancelAction);
          }
        }
      }
      return true;
    }
    
    function onAcceptChanged() {
      var checked = document.getElementById("songbird.accepteula").getAttribute("checked") == "true";
      var dialog = document.documentElement;
      dialog.getButton("accept").setAttribute("disabled", !checked);
    }
  ]]>
  </script>
</dialog>

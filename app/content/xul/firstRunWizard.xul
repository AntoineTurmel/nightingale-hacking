<!-- Import external definitions. -->
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/songbird.css" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/content/bindings/bindings.css"
                 type="text/css"?>
<?xml-stylesheet href="chrome://songbird-dialogs/skin/firstRunWizard.css"
                 type="text/css"?>

<!DOCTYPE window [
<!ENTITY % brandDTD SYSTEM "chrome://branding/locale/brand.dtd">
<!ENTITY % songbirdDTD SYSTEM "chrome://songbird/locale/songbird.dtd">
%brandDTD;
%songbirdDTD;
]>

<!-- First-run wizard. -->
<wizard
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  id="first_run_wizard"
  title="&first_run.title;"
  hidechrome="true"
  onwizardfinish="firstRunWizard.doFinish();"
  onwizardcancel="firstRunWizard.doCancel();"
>

  <!-- *************************************************************************
   *
   * Content.
   *
   ************************************************************************* -->

  <!-- EULA page. -->
  <wizardpage label="&first_run.title;"
              hideback="true"
              hidecancel="true"
              onpageshow="firstRunWizard.doPageShow();">
    <sb-first-run-eula id="first_run_eula" class="first-run-wizard-page"/>
  </wizardpage>

  <!-- Welcome page. -->
  <wizardpage label="&first_run.title;"
              hideback="true"
              onpageshow="firstRunWizard.doPageShow();">
    <sb-first-run-welcome id="first_run_welcome" class="first-run-wizard-page"/>
  </wizardpage>

  <!-- Import media page. -->
  <wizardpage label="&first_run.title;"
              onpageshow="firstRunWizard.doPageShow();">
    <sb-first-run-import-media id="first_run_import_media"
                               class="first-run-wizard-page"/>
  </wizardpage>

  <!-- Add-ons page. -->
  <wizardpage label="&first_run.title;"
              onpageshow="firstRunWizard.doPageShow();">
    <sb-first-run-add-ons id="first_run_add_ons" class="first-run-wizard-page"/>
  </wizardpage>

  <!-- Feedback page. -->
  <wizardpage label="&first_run.title;"
              onpageshow="firstRunWizard.doPageShow();">
    <sb-first-run-feedback id="first_run_feedback"
                           class="first-run-wizard-page"/>
  </wizardpage>


  <!-- *************************************************************************
   *
   * Implementation.
   *
   ************************************************************************* -->

  <!-- Import the Songbird services. -->
  <script type="application/x-javascript"
          src="chrome://global/content/globalOverlay.js"/>
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/windowUtils.js"/>
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/sbDataRemoteUtils.js"/>

  <!-- Import the first run wizard services. -->
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/firstRunWizard.js"/>

</wizard>


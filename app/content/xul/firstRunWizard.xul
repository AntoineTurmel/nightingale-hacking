<!-- Import external definitions. -->
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/songbird.css" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/content/bindings/bindings.css"
                 type="text/css"?>
<?xml-stylesheet href="chrome://songbird-dialogs/skin/firstRunWizard.css"
                 type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://songbird/locale/songbird.dtd">

<!-- First-run wizard. -->
<dialog
  xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  id="first_run_wizard_dialog"
  type="songbird"
  hidechrome="true"
  buttons="none"
  onload="firstRunWizard.doLoad();"
  onunload="firstRunWizard.doUnload();"
  oncommand="firstRunWizard.doCommand(event);"
>

  <!-- *************************************************************************
   *
   * Content.
   *
   ************************************************************************* -->

  <!-- Commands. -->
  <commandset>
    <command id="cmd_back" label="&first_run.back_command.label;"/>
    <command id="cmd_continue" label="&first_run.continue_command.label;"/>
    <command id="cmd_finish" label="&first_run.finish_command.label;"/>
    <command id="cmd_cancel" label="&first_run.cancel_command.label;"/>
  </commandset>

  <!-- Use Songbird window region. -->
  <windowregion/>

  <!-- Wizard box container. -->
  <vbox id="first_run_wizard_box">

    <!-- Wizard deck. -->
    <deck id="first_run_wizard_deck" panelcount="5">

      <sb-first-run-eula id="first_run_eula"/>
      <sb-first-run-welcome id="first_run_welcome"/>
      <sb-first-run-import-media id="first_run_import_media"/>
      <sb-first-run-add-ons id="first_run_add_ons"/>
      <sb-first-run-feedback id="first_run_feedback"/>

    </deck>

    <!-- Navigation box container. -->
    <hbox id="first_run_navigation_box">
      <button id="first_run_back_button" command="cmd_back"/>
      <spacer flex="1"/>
      <button id="first_run_cancel_button" command="cmd_cancel"/>
      <button id="first_run_continue_button" command="cmd_continue"/>
      <button id="first_run_finish_button" command="cmd_finish"/>
    </hbox>

  </vbox>


  <!-- *************************************************************************
   *
   * Implementation.
   *
   ************************************************************************* -->

  <!-- Import the Songbird services. -->
  <script type="application/x-javascript"
          src="chrome://global/content/globalOverlay.js"/>
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/windowUtils.js"/>
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/sbDataRemoteUtils.js"/>

  <!-- Import the first run wizard services. -->
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/firstRunWizard.js"/>

</dialog>


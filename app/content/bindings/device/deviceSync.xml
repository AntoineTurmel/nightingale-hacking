<!-- Import external definitions. -->
<!DOCTYPE window SYSTEM "chrome://songbird/locale/songbird.dtd">

<bindings
      xmlns="http://www.mozilla.org/xbl"
      xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      xmlns:xbl="http://www.mozilla.org/xbl">

  <!-- *************************************************************************
   *****************************************************************************
   *
   * Sync widget.
   *
   *****************************************************************************
   ************************************************************************* -->

  <binding id="sb-device-sync"
     extends="chrome://songbird/content/bindings/device/deviceControl.xml#sb-device-control">

    <!-- ***********************************************************************
     *
     * Content.
     *
     *********************************************************************** -->

     <content>

      <xul:vbox class="device-tab-content">

        <xul:vbox>

          <xul:hbox class="device-tab-header-box">
            <!-- Header label and info. -->
            <xul:label class="device-tab-header-label"
                       value="&device.sync.header.label;"/>
            <xul:label sbid="content_management_header_info_label"
                       class="device-tab-header-info"/>      
          </xul:hbox>

          <xul:groupbox>
            <!-- Management preferences. -->
            <xul:vbox class="content-controls"
                      oncommand="DeviceSyncWidget.onUIPrefChange();">

              <!-- Content management radio group. -->
              <xul:radiogroup sbid="content_management_radio_group" flex="1">

                <xul:radio sbid="content_auto_sync_radio"
                           label="&device.sync.auto_sync.label;"/>
                <xul:radiogroup sbid="content_auto_sync_type_radio_group">
                  <xul:radio sbid="content_auto_sync_all_radio"
                             label="&device.sync.sync_all.label;"/>
                  <xul:radio
                          sbid="content_auto_sync_selected_radio"
                          label="&device.sync.sync_selected.label;"/>
                  <xul:listbox sbid="content_auto_sync_playist_listbox"
                               class="indent"
                               rows="5"
                               onkeyup="DeviceSyncWidget.onUIPrefChange();"
                               onclick="DeviceSyncWidget.onUIPrefChange();"/>
                </xul:radiogroup>
                <xul:radio sbid="content_manual_radio"
                           label="&device.sync.manual.label;"/>

              </xul:radiogroup>
              
            </xul:vbox>

          </xul:groupbox>

        </xul:vbox>

        <xul:hbox class="device-tab-button-box" align="baseline" >

          <xul:spacer flex="1"/>

          <!-- Cancel and save buttons. -->
          <xul:button sbid="cancel_button"
                      label="&window.cancel;"
                      action="cancel"
                      oncommand="DeviceSyncWidget.onAction(event);"/>
          <xul:button sbid="save_button"
                      label="&window.save;"
                      action="save"
                      oncommand="DeviceSyncWidget.onAction(event);"/>

        </xul:hbox>

      </xul:vbox>

    </content>


    <!-- ***********************************************************************
     *
     * Implementation.
     *
     *********************************************************************** -->

    <implementation>

      <!--
       * constructor
       *
       *   This method constructs the widget.
       -->

      <constructor> <![CDATA[
      {
        /* Import external services. */
        this.importExternalServices();
      }
      ]]></constructor>


      <!--
       * destructor
       *
       *   This method destroys the widget.
       -->

      <destructor> <![CDATA[
      {
        /* Finalize the iPod music management services. */
        DeviceSyncWidget.finalize(this);
      }
      ]]></destructor>


      <!-- *********************************************************************
       *
       * Internal music management panel services.
       *
       ********************************************************************* -->

      <!--
       * importExternalServices
       *
       *   This function imports external services.
       -->

      <method name="importExternalServices"><body><![CDATA[
      {
        /* Import the device sync services. */
        if (typeof(DeviceSyncWidget) == "undefined") {
          var jsLoader;
  
          /* Get the Javascript sub-script loader services. */
          jsLoader = Components.classes["@mozilla.org/moz/jssubscript-loader;1"]
                               .getService
                                  (Components.interfaces.mozIJSSubScriptLoader);
          jsLoader.loadSubScript
                  ("chrome://songbird/content/scripts/device/deviceSync.js",
                   null);
        }
        
      }
      ]]></body></method>

    </implementation>


    <!-- ***********************************************************************
     *
     * Handlers.
     *
     *********************************************************************** -->

    <handlers>
      <handler event="deviceBound"><![CDATA[
        /* Re-initialize the device music management services. */
        DeviceSyncWidget.finalize(this);
        DeviceSyncWidget.initialize(this);
        ]]></handler>
    </handlers>

  </binding>

</bindings>

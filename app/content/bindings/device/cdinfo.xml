<!DOCTYPE window SYSTEM "chrome://songbird/locale/songbird.dtd">

<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">
  <binding id="sb-cdtracks">
    <content>
      <xul:sb-closable-box label="&cdinfo.details.closed;">
        <xul:listbox anonid="tracklist" flex="1" seltype="none">
          <xul:listcols>
            <xul:listcol/>
            <xul:listcol flex="1"/>
          </xul:listcols>

          <xul:listhead>
            <xul:listheader label="&property.ordinal;"/>
            <xul:listheader label="&property.track_name;"/>
          </xul:listhead>
        </xul:listbox>
      </xul:sb-closable-box>
    </content>

    <implementation>
      <method name="setTrackTitles">
        <parameter name="titles"/>
        <body>
          <![CDATA[
            var XUL_NS = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul";
            function newelem(tagname) { return document.createElementNS(XUL_NS, tagname); }
	    var list = document.getAnonymousElementByAttribute(this, "anonid", "tracklist");
            var tracks = 0;

            function doappend(title)
            {
              var row = newelem("listitem");
              row.appendChild(newelem("listcell")).setAttribute("label", ++tracks);
              row.appendChild(newelem("listcell")).setAttribute("label", title);
              list.appendChild(row);
            }

            titles.forEach(doappend);
            list.setAttribute("rows", Math.min(5, titles.length));
          ]]>
        </body>
      </method>
    </implementation>

    <handlers>
      <handler event="collapse">
        <![CDATA[
          var box = document.getAnonymousElementByAttribute(this, "anonid", "tracklist").parentNode;
	  box.setAttribute("label", SBString("cdinfo.details."+ (box.open ? "open" : "closed")));
        ]]>
      </handler>
    </handlers>
  </binding>
</bindings>

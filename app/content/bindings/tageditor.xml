<!DOCTYPE window SYSTEM "chrome://songbird/locale/rmp_demo.dtd" >

<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">


  
  
  <!-- TAG EDITOR CONTROL -->

  
  
  
  <binding id="tageditor" extends="chrome://songbird/content/bindings/drawer.xml#drawer">

  <implementation>

    <constructor>
      <![CDATA[
      ]]>
    </constructor>
    <destructor>
    </destructor>

    <method name="setSelection">
      <parameter name="guids"/>
      <body>
        this.guid = guids[0]; // no multiple edition yet
        this.updateForm();
      </body>
    </method>

    <method name="updateForm">
      <body>
        this.updateForm();
      </body>
    </method>

    <method name="insertDrawerContent">
     <body>
       var ret = document.createElement("hbox");
       ret.setAttribute("class", "sb_faceplate");
       ret.setAttribute("height", this.getContentSize());
       return ret;
     </body>
    </method>

    <method name="getContentSize">
     <body>
       return 150;
     </body>
    </method>

   </implementation>
 
  </binding>

</bindings>


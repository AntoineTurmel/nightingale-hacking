<!-- Import external definitions. -->
<!DOCTYPE window SYSTEM "chrome://songbird/locale/songbird.dtd">

<bindings
      xmlns="http://www.mozilla.org/xbl"
      xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      xmlns:xbl="http://www.mozilla.org/xbl">

  <!-- *************************************************************************
   *****************************************************************************
   *
   * Closable box widget.
   *
   *   This widget is a box that can contain items and can be closed.  It
   * provides and open/close twisty that shows or hides the contents of the box.
   * It may also be given a label that it will display above the box contents.
   *
   *****************************************************************************
   ************************************************************************* -->

  <binding id="sb-closable-box">

    <!-- ***********************************************************************
     *
     * Content.
     *
     *********************************************************************** -->

    <content>

      <xul:vbox flex="1">

        <!-- Box open/close twisty and label. -->
        <xul:hbox>
          <xul:vbox pack="center">
            <xul:image sbid="twisty"
                       class="closable-box-image"
                       mousethrough="never"
                       onclick="toggleOpenClose(event);"/>
          </xul:vbox>
          <xul:label xbl:inherits="value=label" onclick="toggleOpenClose(event);"/>
        </xul:hbox>

        <!-- Box contents. -->
        <xul:box sbid="content" hidden="true">
          <children/>
        </xul:box>

      </xul:vbox>

    </content>


    <!-- ***********************************************************************
     *
     * Implementation.
     *
     *********************************************************************** -->

    <implementation>

    <!--
     /**
      * \brief Toggle the open/close state of the box contents.
      */
     -->

    <method name="toggleOpenClose"><body>
        <![CDATA[
      // Toggle the twisty state.
      var twisty = document.getAnonymousElementByAttribute(this,
                                                           "sbid",
                                                           "twisty");
      if (twisty.getAttribute("open") == "true")
          twisty.removeAttribute("open");
      else
          twisty.setAttribute("open", "true");

      // Update content box state.
      var contentBox = document.getAnonymousElementByAttribute(this,
                                                               "sbid",
                                                               "content");
      var collapsed = false;
      if (twisty.getAttribute("open") == "true") {
        contentBox.hidden = false;
      } else {
        contentBox.hidden = true;
        collapsed = true;
      }

      // Update window size.
      window.sizeToContent();
      
      var event = document.createEvent("Event");
      
      event.initEvent("collapse", true, true);
      event.detail = collapsed;
      
      contentBox.dispatchEvent(event);
    ]]></body></method>

    </implementation>

  </binding>

</bindings>


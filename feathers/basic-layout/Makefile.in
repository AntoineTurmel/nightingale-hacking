DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

EXTENSION_UUID = basic-layouts@songbirdnest.com
EXTENSION_DIR  = $(SONGBIRD_EXTENSIONSDIR)/$(EXTENSION_UUID)

SUBDIRS = content

include $(topsrcdir)/build/rules.mk

all:: extinstall

#
# A stub extension is placed in the extensions folder, but the
# content is placed in chrome/songbird.jar
#

extinstall :
	@$(CYGWIN_WRAPPER)	$(MKDIR) -p $(EXTENSION_DIR)
	$(CYGWIN_WRAPPER)	$(CP)	-f $(srcdir)/install.rdf $(EXTENSION_DIR)

.PHONY : extinstall

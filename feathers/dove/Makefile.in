DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

EXTENSION_UUID = dove@songbirdnest.com
EXTENSION_DIR  = $(SONGBIRD_EXTENSIONSDIR)/$(EXTENSION_UUID)

tasks: all extinstall

# Dove is the default theme for Mac OS X

ifeq (macosx,$(SB_PLATFORM))
# This is needed for the moment because the default theme has to have a
# chrome.manifest file. This is a bug in the EM that will be resolved someday.
CHROME_HACK_CMD = $(CYGWIN_WRAPPER) touch $(EXTENSION_DIR)/chrome.manifest
else
JAR_IS_EXTENSION = 1
endif

extinstall:
	@$(CYGWIN_WRAPPER)	$(MKDIR) -p $(EXTENSION_DIR)
	$(CYGWIN_WRAPPER)	$(CP)	-f $(srcdir)/install.rdf $(EXTENSION_DIR)
	$(CHROME_HACK_CMD)

JAR_MANIFEST = jar.mn

include $(topsrcdir)/build/rules.mk

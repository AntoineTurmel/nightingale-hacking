DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

#
# These scripts have problems with absolute paths, so use $(DEPTH) instead
#

STAGE_DIR	= $(DEPTH)/update

SERVER_BASE = http://download.songbirdnest.com/songbird/nightly
SERVER_PATH = $(SERVER_BASE)/$(SB_BUILD_ID)-$(SB_BRANCHNAME)

ifdef DEBUG
DEBUG_EXT = .debug
endif

UPDATE_FILENAME_BASE = $(SB_APPNAME_LCASE)-$(SB_MILESTONE).$(SB_PLATFORM)$(DEBUG_EXT)

tasks: complete-patch \
       complete-snippet \
       all \
       $(NULL)

complete-patch::
	$(MKDIR) -p $(STAGE_DIR)
	MAR=$(MAR) \
    $(MOZSDK_SCRIPTS_DIR)/make_full_update.sh \
    "$(STAGE_DIR)/$(UPDATE_FILENAME_BASE).mar" \
    "$(DEPTH)/$(DISTDIRNAME)"


complete-snippet::
	$(MKDIR) -p $(STAGE_DIR)
	$(PERL) $(SCRIPTS_DIR)/generate-update-snippet.pl \
    $(STAGE_DIR)/$(UPDATE_FILENAME_BASE).mar \
    "complete" \
    $(STAGE_DIR)/$(UPDATE_FILENAME_BASE).snippet \
    "$(SERVER_PATH)/$(UPDATE_FILENAME_BASE).mar" \
    $(SB_BUILD_ID) \
    $(SB_MILESTONE) \
    "sha1" \
    $(NULL)

partial-patch::
	$(MKDIR) -p $(STAGE_DIR)
	MAR=$(MAR) \
  MBSDIFF=$(MBSDIFF) \
    $(MOZSDK_SCRIPTS_DIR)/make_incremental_update.sh \
    "$(STAGE_DIR)/$(SB_APPNAME).partial.$(SRC_BUILD_ID)-$(DST_BUILD_ID).mar" \
    "$(SRC_BUILD)" \
    "$(DST_BUILD)"

include $(topsrcdir)/build/rules.mk

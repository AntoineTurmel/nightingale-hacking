DEPTH = .
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

CREATEDIRS = $(SONGBIRD_CHROMEDIR) \
             $(SONGBIRD_COMPONENTSDIR) \
             $(SONGBIRD_DEFAULTSDIR) \
             $(SONGBIRD_PREFERENCESDIR) \
             $(SONGBIRD_PLUGINSDIR) \
             $(SONGBIRD_VLCPLUGINSDIR) \
             $(SONGBIRD_XULRUNNERDIR) \
             $(NULL)

ifeq (macosx,$(SB_PLATFORM))
CREATEDIRS += $(SONGBIRD_MACOS)
endif

SUBDIRS = app \
          components \
          dependencies \
          feathers \
          installer \
          locales \
          $(NULL)

SUBDIRDEPS = installer : components app extensions feathers locales

include $(topsrcdir)/build/rules.mk

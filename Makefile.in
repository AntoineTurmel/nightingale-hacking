DEPTH = .
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

CREATEDIRS = $(SONGBIRD_CHROMEDIR) \
             $(SONGBIRD_COMPONENTSDIR) \
             $(SONGBIRD_DEFAULTSDIR) \
             $(SONGBIRD_PREFERENCESDIR) \
             $(SONGBIRD_PLUGINSDIR) \
             $(SONGBIRD_SCRIPTSDIR) \
             $(SONGBIRD_XULRUNNERDIR) \
             $(NULL)

ifeq (win32,$(SB_PLATFORM))
  CREATEDIRS += $(SONGBIRD_VLCPLUGINSDIR)
endif

ifeq (macosx,$(SB_PLATFORM))
  CREATEDIRS += $(SONGBIRD_MACOS)
endif

SUBDIRS = build \
          dependencies \
          app \
          components \
          feathers \
          locales \
          $(NULL)

ifdef MAKE_INSTALLER
SUBDIRS += installer 
SUBDIRDEPS = installer : components app feathers locales
endif

ifdef SONGBIRD_OFFICIAL
SUBDIRS += update
SUBDIRDEPS2 = update : installer
endif

ifdef SONGBIRD_OFFICIAL
ifeq (win32,$(SB_PLATFORM))
  AIRBAG_SYMBOL_PATH = $(SONGBIRD_OBJDIR)/airbag-symbols
  AIRBAG_ARCHIVE_PATH = $(SONGBIRD_OBJDIR)
  AIRBAG_ARCHIVE_FILENAME = symbols-$(SB_BUILD_ID).tar.bz2
endif
endif

tasks: all

buildsymbols:
ifdef SONGBIRD_OFFICIAL
ifeq (win32,$(SB_PLATFORM))
	@echo removing old symbol store at $(AIRBAG_SYMBOL_PATH)
	$(RM) -f $(AIRBAG_ARCHIVE_PATH)/$(AIRBAG_ARCHIVE_FILENAME)
	$(RM) -rf $(AIRBAG_SYMBOL_PATH)
	@echo building airbag symbol store at $(AIRBAG_SYMBOL_PATH)
	$(MKDIR) -p $(AIRBAG_SYMBOL_PATH)
	$(FIND) . -path "$(SONGBIRD_DISTDIR)" -prune -o -name "*.exe"                 \
          -o -name "*.dll" -o -name "*.EXE" -o -name "*.DLL" |                  \
          sed "s/\.[^\.]*$$/\.pdb/" |                                           \
	  xargs $(MOZSDK_SCRIPTS_DIR)/make_symbol_store.pl -c                         \
	  $(topsrcdir)/tools/$(SB_PLATFORM)/airbag/dump_syms$(BIN_SUFFIX)             \
	  $(AIRBAG_SYMBOL_PATH) >                                                     \
	  $(AIRBAG_SYMBOL_PATH)/$(SB_BUILD_ID)-symbols.txt
	@echo packing symbols at $(AIRBAG_ARCHIVE_PATH)/$(AIRBAG_ARCHIVE_FILENAME)
	$(MKDIR) -p $(AIRBAG_ARCHIVE_PATH)
	cd $(AIRBAG_SYMBOL_PATH) && $(TAR) -cvjf $(AIRBAG_ARCHIVE_FILENAME) *
	$(MV) $(AIRBAG_SYMBOL_PATH)/$(AIRBAG_ARCHIVE_FILENAME) $(AIRBAG_ARCHIVE_PATH)
endif
endif

uploadsymbols:
ifdef SONGBIRD_OFFICIAL
ifeq (win32,$(SB_PLATFORM))
	$(MOZSDK_SCRIPTS_DIR)/upload_symbols.sh $(AIRBAG_ARCHIVE_PATH)/$(AIRBAG_ARCHIVE_FILENAME)
endif
endif

include $(topsrcdir)/build/rules.mk


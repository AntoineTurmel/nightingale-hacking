DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@ @srcdir@/$(SB_PLATFORM)
include $(DEPTH)/build/autodefs.mk

CPP_SRCS = main.cpp \
           sbError.cpp \
           sbiTunesAgentProcessor.cpp \
           $(NULL)

# we force include mozilla-config.h; otherwise this is not necessary
CPP_INCLUDES = $(MOZSDK_INCLUDE_DIR) \
               $(srcdir) \
               $(NULL)

CPP_EXTRA_DEFS += -DSB_APPNAME=$(SB_APPNAME) -DSB_PROFILE_VERSION=$(SB_PROFILE_VERSION)
               
SIMPLE_PROGRAM_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                              $(NULL)

ifeq ($(SB_PLATFORM),windows)
SIMPLE_PROGRAM_EXTRA_IMPORTS = shell32 \
                               version \
                               psapi \
                               $(NULL)
CPP_INCLUDES += $(srcdir)/windows \
                $(DEPS_DIR)/private \
                $(NULL)
                                               
CPP_SRCS += winmain.cpp \
            sbiTunesAgentAppWatcher.cpp \
            sbiTunesAgentWindowsProcessor.cpp \
            sbiTunesLibrary.cpp \
            $(NULL)

SUBDIRS += $(NULL)
endif # SB_PLATFORM = windows

ifeq ($(SB_PLATFORM),macosx)
CMM_INCLUDES += $(srcdir) \
                $(srcdir)/macosx \
                $(MOZSDK_INCLUDE_DIR) \
                $(NULL)

CMM_SRCS += sbiTunesAgentMacProcessor.mm \
            $(NULL)

CMM_EXTRA_DEFS += -DSB_APPNAME=$(SB_APPNAME) -DSB_PROFILE_VERSION=$(SB_PROFILE_VERSION)


SIMPLE_PROGRAM_FLAGS += -mmacosx-version-min=10.4 -framework CoreServices -framework CoreFoundation -framework Cocoa -Wl,-syslibroot,/Developer/SDKs/MacOSX10.4u.sdk
SIMPLE_PROGRAM_OBJS += $(CMM_SRCS:.mm=$(OBJ_SUFFIX)) \
                       $(NULL)

endif # SB_PLATFORM = macosx

SIMPLE_PROGRAM = songbirditunesagent$(BIN_SUFFIX)
SIMPLE_PROGRAM_OBJS += $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

FINAL_TARGET = $(SONGBIRD_DISTDIR)

include $(topsrcdir)/build/rules.mk

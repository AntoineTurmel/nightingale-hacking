DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

SHELL_EXECUTE = $(topsrcdir)/documentation/make-webpageapi-docs.sh $(topsrcdir)

ifeq (windows,$(SB_PLATFORM))

TOOLSDIR = $(topsrcdir)/tools/win32

DOXYGEN_INPUTDIRS = $(DEPTH)/../components \
                    $(DEPTH)/../bindings \
                    $(NULL)
                    
DOXYGEN_OUTPUTDIR = $(DEPTH)/../documentation/sdkapi \
                    $(NULL)

DOXYGEN_STRIP_TOPSRCDIR = $(DEPTH)/.. \
                          $(NULL)

SONGBIRD_DOCUMENTATION = songbird.dox.in \
                         naturaldocsconfig/Docs.css \
                         doxygenconfig/header.html \
                         $(NULL)
                         
DOXYGEN_PREPROCESS = songbird.dox \
                     $(NULL)

# Add the sdkapi to the execute chain, because we don't have SHELL_EXECUTE2
SHELL_EXECUTE += ; $(topsrcdir)/documentation/make-sdkapi-docs.sh $(topsrcdir) $(TOOLSDIR)

endif #windows

include $(topsrcdir)/build/rules.mk

# nightingaleconfig-find - Loads options from nightingale.config onto configure's
#    command-line. The nightingale.config file is searched for in the
#    order:
#       if $NIGHTINGALECONFIG is set, use that.
#       Otherwise, use $TOPSRCDIR/nightingale.config
#
topsrcdir=$1

for _config in "$NIGHTINGALECONFIG" \
               "$topsrcdir/nightingale.config"
do
  if test -f "$_config"; then
    echo "$_config";
    exit 0
  fi
done

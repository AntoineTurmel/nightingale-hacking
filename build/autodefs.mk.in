SONGBIRD_PLUGINSDIR     = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_RESOURCES@/plugins
SONGBIRD_VLCPLUGINSDIR  = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_RESOURCES@/vlcplugins
SONGBIRD_XULRUNNERDIR   = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_FRAMEWORKS@@XULRUNNERDIR@
SONGBIRD_MACOS          = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_CONTENTS@/MacOS

#
# Tools
#

CC        = @CC@@BIN_SUFFIX@
CXX       = @CXX@@BIN_SUFFIX@
LD        = @LD@@BIN_SUFFIX@
AR        = @AR@@BIN_SUFFIX@
RC        = @RC@@BIN_SUFFIX@
MT        = @MT@@BIN_SUFFIX@
RANLIB    = @RANLIB@@BIN_SUFFIX@
PERL      = @PERL@@BIN_SUFFIX@
LN        = @LN@@BIN_SUFFIX@
UNZIP     = @UNZIP@@BIN_SUFFIX@

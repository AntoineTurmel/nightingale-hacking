COMPILER_GARBAGE      = @COMPILER_GARBAGE@

XPIDLFLAGS_INCLUDE    = -I

PTHREAD_LIBS          = @PTHREAD_LIBS@

GSTREAMER_CFLAGS      = @GSTREAMER_CFLAGS@
GSTREAMER_LIBS        = @GSTREAMER_LIBS@
GTK_CFLAGS            = @GTK_CFLAGS@
GTK_LIBS              = @GTK_LIBS@
GLIB_CFLAGS           = @GLIB_CFLAGS@

FIND      = @FIND@@BIN_SUFFIX@
CP        = @CP@@BIN_SUFFIX@
MV        = @MV@@BIN_SUFFIX@
CHMOD     = @CHMOD@@BIN_SUFFIX@
RM        = @RM@@BIN_SUFFIX@
MKDIR     = @MKDIR@@BIN_SUFFIX@
AWK       = @AWK@@BIN_SUFFIX@

BUILDDIR       = @top_srcdir@/build
AUTOCONF_TOOLS = @top_srcdir@/build/autoconf

XPIDL     = $(MOZSDK_DIR)/bin/xpidl@BIN_SUFFIX@
XPTLINK   = $(MOZSDK_DIR)/bin/xpt_link@BIN_SUFFIX@

MAR_BIN     = $(MOZSDK_DIR)/bin/mar@BIN_SUFFIX@
MBSDIFF_BIN = $(MOZSDK_DIR)/bin/mbsdiff@BIN_SUFFIX@


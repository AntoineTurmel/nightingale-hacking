SONGBIRD_OBJDIR         = @top_srcdir@/@OBJDIRNAME@
SONGBIRD_DISTDIR        = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_RESOURCES@
SONGBIRD_CHROMEDIR      = @top_srcdir@/@OBJDIRNAME@/@DISTDIRNAME@@MACOSX_RESOURCES@/chrome

RANLIB    = @RANLIB@@BIN_SUFFIX@
PERL      = @PERL@@BIN_SUFFIX@
LN        = @LN@@BIN_SUFFIX@
UNZIP     = @UNZIP@@BIN_SUFFIX@
ZIP       = @ZIP@@BIN_SUFFIX@
GUNZIP    = @GUNZIP@@BIN_SUFFIX@
GZIP      = @GZIP@@BIN_SUFFIX@
TAR       = @TAR@@BIN_SUFFIX@
FIND      = @FIND@@BIN_SUFFIX@

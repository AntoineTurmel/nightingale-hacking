DEPTH     = ../../..
topsrcdir = @top_srcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@ @srcdir@/$(SB_PLATFORM)

include $(DEPTH)/build/autodefs.mk

SUBDIRS = content \
          $(NULL)
 
target_name = sbIntl$(DEBUG:%=_d)

CPP_SRCS = sbStringTransform.cpp \
           sbIntlModule.cpp \
           sbArticlesData.cpp \
           $(NULL)

# Comes from the platform directory 
ifeq (macosx,$(SB_PLATFORM))
   CMM_SRCS += sbStringTransformImpl.mm
else
   CPP_SRCS += sbStringTransformImpl.cpp 
endif

CPP_INCLUDES = \
      $(DEPTH)/components/intl/public \
      $(topsrcdir)/components/intl/src \
      $(topsrcdir)/components/intl/src/$(SB_PLATFORM) \
      $(MOZSDK_INCLUDE_DIR) \
      $(MOZSDK_INCLUDE_DIR)/nspr \
      $(MOZSDK_INCLUDE_DIR)/xpcom \
      $(MOZSDK_INCLUDE_DIR)/string \
      $(MOZSDK_INCLUDE_DIR)/necko \
      $(MOZSDK_INCLUDE_DIR)/dom \
      $(MOZSDK_INCLUDE_DIR)/content \
      $(MOZSDK_IDL_DIR) \
      $(NULL)

#
# Mac OS X
#

ifeq (macosx,$(SB_PLATFORM))

CPP_INCLUDES += $(topsrcdir)/components/intl/src/$(SB_PLATFORM) \
                $(NULL)


CMM_INCLUDES = $(DEPTH)/components/intl/public \
               $(topsrcdir)/components/intl/src/$(SB_PLATFORM) \
               $(topsrcdir)/components/intl/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_IDL_DIR) \
               $(NULL) 
endif

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4 \
                            xpcomglue_s \
                            xpcom \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s
endif

ifeq (windows,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s
else
  DYNAMIC_LIB_STATIC_IMPORTS += $(MOZSDK_LIB_DIR)/libunicharutil_external_s
endif

# preedTODO look at these...
ifeq (,$(filter-out linux solaris,$(SB_PLATFORM)))
    CPP_EXTRA_FLAGS += $(shell pkg-config --cflags glib-2.0) \
                       $(NULL)

    DYNAMIC_LIB_EXTRA_FLAGS += $(shell pkg-config --libs glib-2.0) \
                               $(NULL)
endif

ifeq (macosx,$(SB_PLATFORM))

# preedTODO look at these...
DYNAMIC_LIB_EXTRA_FLAGS= -framework Foundation -framework Cocoa -Wl,-syslibroot,/Developer/SDKs/MacOSX10.4u.sdk

endif

LIBSONGBIRD_COMPONENT = sbIntl

IS_COMPONENT = 1

include $(topsrcdir)/build/rules.mk

DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbFileScan_d
else
target_name = sbFileScan
endif

CPP_SRCS = FileScan.cpp \
           FileScanComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/filescan/public \
               $(topsrcdir)/components/include \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/dom \
               $(MOZSDK_INCLUDE_DIR)/intl \
               $(MOZSDK_INCLUDE_DIR)/xultmpl \
               $(MOZSDK_INCLUDE_DIR)/content \
               $(MOZSDK_INCLUDE_DIR)/widget \
               $(MOZSDK_INCLUDE_DIR)/layout \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs \
                               unicharutil_external_s \
                               $(NULL)
endif

ifeq (windows,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s
else
  DYNAMIC_LIB_STATIC_IMPORTS += $(MOZSDK_LIB_DIR)/libunicharutil_external_s
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

LIBSONGBIRD_COMPONENT = SongbirdFileScanComponent

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

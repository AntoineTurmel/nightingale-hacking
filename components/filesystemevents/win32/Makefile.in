DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target := sbWin32FileSystemEvents
ifdef DEBUG
target := $(addsuffix _d,$(target))
endif

CPP_SRCS = $(topsrcdir)/components/filesystemevents/base/src/sbBaseFileSystemWatcher.cpp \
           $(topsrcdir)/components/filesystemevents/base/src/sbFileSystemNode.cpp \
           $(topsrcdir)/components/filesystemevents/base/src/sbFileSystemTree.cpp \
           sbWin32FileSystemWatcher.cpp \
           ../FileSystemComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/filesystemevents/base/public \
               $(topsrcdir)/components/filesystemevents/base/src \
               $(topsrcdir)/components/moz/strings/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))) \
                   $(NULL)

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcomglue_s \
                            xpcom \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

DYNAMIC_LIB_STATIC_IMPORTS += \
  $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
  $(SONGBIRD_OBJDIR)/components/moz/threads/src/sbMozThreads$(DEBUG:%=_d) \
  $(NULL)


LIBSONGBIRD_COMPONENT = SongbirdFileSystem

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(NULL)

include $(topsrcdir)/build/rules.mk


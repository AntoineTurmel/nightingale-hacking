DEPTH = ../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk


SUBDIRS += base     \
          $(NULL)

ifeq ($(SB_PLATFORM), windows)
# XXX kreeger: Don't build windows yet (see bug 12081)
else
ifeq ($(SB_PLATFORM), macosx)
#
# XXX kreeger:
#     Sadly, this won't build on 10.4 - we need to make sure we
#     can check the OS version in configure. Leaving this out for now.
#
#     See bug 14642 
#
SUBDIRS += macosx
else
SUBDIRS += linux
endif
endif

include $(topsrcdir)/build/rules.mk

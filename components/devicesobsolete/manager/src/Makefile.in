DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbDeviceManager_d
else
target_name = sbDeviceManager
endif

CPP_SRCS = DeviceManager.cpp \
           DeviceManagerComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/devicesobsolete/base/public \
               $(topsrcdir)/components/devicesobsolete/base/src \
               $(DEPTH)/components/devicesobsolete/manager/public \
               $(DEPTH)/components/medialibrary/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/embedcomponents \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/uriloader \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS += $(MOZSDK_LIB_DIR)/libunicharutil_external_s
endif

ifeq (win32,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                          $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

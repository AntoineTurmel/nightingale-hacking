DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbPlaylistReaderM3U_d
else
target_name = sbPlaylistReaderM3U
endif

CPP_SRCS = PlaylistReaderM3U.cpp \
           PlaylistReaderM3UComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/medialibrary/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/webbrowserpersist \
               $(MOZSDK_INCLUDE_DIR)/uriloader \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4  \
                            plc4  \
                            xpcom \
                            $(NULL)

ifeq ($(SB_PLATFORM), macosx)
  DYNAMIC_LIB_OBJS += $(MOZSDK_LIB_DIR)/XUL 
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
else
  DYNAMIC_LIB_EXTRA_IMPORTS += xul \
                               unicharutil_s \
                               $(NULL)
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                          $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

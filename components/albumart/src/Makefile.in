DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbAlbumArt_d
else
target_name = sbAlbumArt
endif

CPP_SRCS = \
  sbAlbumArtCommon.cpp \
  sbAlbumArtFetcherSet.cpp \
  sbAlbumArtModule.cpp \
  sbAlbumArtService.cpp \
  sbFileAlbumArtFetcher.cpp \
  sbAlbumArtScanner.cpp \
  sbMetadataAlbumArtFetcher.cpp \
  $(NULL)

CPP_INCLUDES = $(DEPTH)/components/albumart/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/property/public \
               $(DEPTH)/components/job/public \
               $(DEPTH)/components/mediacore/metadata/manager/public \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/moz/strings/src \
               $(topsrcdir)/components/moz/threads/src \
               $(topsrcdir)/components/property/src \
               $(topsrcdir)/components/library/base/src/static \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/mimetype \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/intl \
               $(MOZSDK_INCLUDE_DIR)/dom \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4 \
                            unicharutil_external_s \
                            xpcomglue_s \
                            xpcom \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR)

ifdef DEBUG
moz_stringutils = sbMozStringUtils_d
moz_threads = sbMozThreads_d
else
moz_stringutils = sbMozStringUtils
moz_threads = sbMozThreads
endif

DYNAMIC_LIB_STATIC_IMPORTS += \
  $(SONGBIRD_OBJDIR)/components/moz/strings/src/$(moz_stringutils) \
  $(SONGBIRD_OBJDIR)/components/moz/threads/src/$(moz_threads) \
  $(NULL)

SONGBIRD_COMPONENTS = $(srcdir)/sbLastFmAlbumArtFetcher.js \
                      $(NULL)

IS_COMPONENT = 1

SONGBIRD_JSMODULES = $(srcdir)/sbCoverHelper.jsm \
                     $(NULL)

include $(topsrcdir)/build/rules.mk


DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target_name = sbMTPWin32$(DEBUG:%=_d)

CPP_SRCS = sbWPDMarshall.cpp \
           sbWPDModule.cpp \
           sbPortableDeviceEventsCallback.cpp \
           sbWPDCommon.cpp \
           sbPropertyVariant.cpp \
           sbWPDDevice.cpp \
           sbWPDDeviceController.cpp \
           sbWPDDeviceThread.cpp \
           sbWPDPropertyAdapter.cpp \
           $(topsrcdir)/components/devices/base/src/sbBaseDeviceEventTarget.cpp \
           $(topsrcdir)/components/devices/base/src/sbContentTypeFormat.cpp \
           $(topsrcdir)/components/devices/base/src/sbDeviceCompatibility.cpp \
           $(topsrcdir)/components/devices/base/src/sbDeviceContent.cpp \
           $(topsrcdir)/components/devices/base/src/sbDeviceEvent.cpp \
           $(topsrcdir)/components/devices/base/src/sbDeviceLibrary.cpp \
           $(topsrcdir)/components/moz/strings/src/sbTArrayStringEnumerator.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/devices/manager/public \
               $(DEPTH)/components/devices/device/public \
               $(topsrcdir)/components/devices/device/src \
               $(DEPTH)/components/devices/marshall/public \
               $(topsrcdir)/components/devices/marshall/src \
               $(DEPTH)/components/devices/controller/public \
               $(topsrcdir)/components/devices/controller/src \
               $(DEPTH)/components/devices/base/public \
               $(DEPTH)/components/devices/mtp/public \
               $(topsrcdir)/components/devices/base/src \
               $(DEPTH)/components/property/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/library/localdatabase/public \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/library/localdatabase/src \
               $(topsrcdir)/components/moz/strings/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/embedcomponents \
               $(MOZSDK_INCLUDE_DIR)/docshell \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/unicharutil \
               $(MOZSDK_IDL_DIR) \
               $(DEPS_DIR)/wpdsdk/Include \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            mssachlp \
                            PortableDeviceGuids \
                            sbDeviceBase$(DEBUG:%=_d) \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(DEPS_DIR)/wpdsdk/Lib/x86/ \
                           $(DEPTH)/components/devices/base/src/
                           $(NULL)

ifdef DEBUG
DYNAMIC_LIB_IMPORT_PATHS += $(DEPS_DIR)/MSWMSDK/debug
else
DYNAMIC_LIB_IMPORT_PATHS += $(DEPS_DIR)/MSWMSDK/release
endif

DYNAMIC_LIB_STATIC_IMPORTS += $(SONGBIRD_OBJDIR)/components/devices/marshall/src/sbDeviceMarshall$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/devices/controller/src/sbDeviceController$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/devices/device/src/sbDeviceCore$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
                              $(NULL)

LIBSONGBIRD_COMPONENT = sbMTPWin32
SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

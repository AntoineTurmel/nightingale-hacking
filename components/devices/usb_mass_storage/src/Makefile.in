DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbUSBMassStorageDevice_d
devicebase = devicebase_d
else
target_name = sbUSBMassStorageDevice
devicebase = devicebase
endif

CPP_SRCS = USBMassStorageDevice.cpp \
           USBMassStorageDeviceComponent.cpp \
           $(NULL)

ifeq (win32,$(SB_PLATFORM))
CPP_SRCS += $(SB_PLATFORM)/USBMassStorageDeviceWin32.cpp
endif

CPP_INCLUDES = $(topsrcdir)/components/devices/base/src\
               $(DEPTH)/components/devices/base/public \
               $(DEPTH)/components/devices/usb_mass_storage/public \
               $(DEPTH)/components/devices/usb_mass_storage/src/$(SB_PLATFORM) \
               $(DEPTH)/components/medialibrary/public \
               $(srcdir)/$(SB_PLATFORM)/ \
               $(srcdir) \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/uriloader \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(patsubst %.cpp,%$(OBJ_SUFFIX),$(notdir $(CPP_SRCS)))

DYNAMIC_LIB_STATIC_IMPORTS = $(DEPTH)/components/devices/base/src/$(devicebase)

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4  \
                            plc4  \
                            xpcom \
                            $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_OBJS += $(MOZSDK_LIB_DIR)/XUL 
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS += $(MOZSDK_LIB_DIR)/libunicharutil_s
  DYNAMIC_LIB_EXTRA_IMPORTS += xul
endif

ifeq (win32,$(SB_PLATFORM))
  CPP_INCLUDES += $(DEPS_DIR)/windows_ddk/$(SB_CONFIGURATION)/include

  DYNAMIC_LIB_EXTRA_IMPORTS += xul \
                               unicharutil_s \
                               $(NULL)
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

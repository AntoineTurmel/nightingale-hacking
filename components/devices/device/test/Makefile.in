DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@ @top_srcdir@/components/devices/base/src

include $(DEPTH)/build/autodefs.mk

XPIDL_SRCS = sbDeviceDeviceTesterInterfaces.idl \
             sbIMockDevice.idl \
             $(NULL)

XPIDL_INCLUDES = $(topsrcdir)/components/devices/base/public \
                 $(NULL)

XPIDL_MODULE = DeviceDeviceTester.xpt

XPIDL_MODULE_TYPELIBS = $(XPIDL_SRCS:.idl=.xpt)


CPP_SRCS = sbDeviceDeviceTesterModule.cpp \
           sbDeviceDeviceTesterUtils.cpp \
           sbMockDevice.cpp \
           $(NULL)

# From components/devices/base/src/
CPP_SRCS += sbBaseDeviceEventTarget.cpp \
            sbDeviceEvent.cpp \
            sbDeviceLibrary.cpp \
            sbDeviceLibraryHelpers.cpp \
            sbDeviceContent.cpp \
            $(NULL)

CPP_EXTRA_INCLUDES = $(DEPTH)/components/devices/device/test \
               $(DEPTH)/components/devices/base/public \
               $(DEPTH)/components/devices/device/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/library/localdatabase/public \
               $(DEPTH)/components/property/public \
               $(topsrcdir)/components/devices/base/src \
               $(topsrcdir)/components/devices/device/src \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/library/base/src/static \
               $(topsrcdir)/components/library/localdatabase/src \
               $(topsrcdir)/components/moz/strings/src \
               $(topsrcdir)/components/property/src \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(NULL)

DYNAMIC_LIB = sbDeviceDeviceTester$(DEBUG:%=_d)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcomglue_s \
                            xpcom \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(DEPTH)/components/devices/base/src/
                           $(NULL)

DYNAMIC_LIB_STATIC_IMPORTS += $(SONGBIRD_OBJDIR)/components/devices/device/src/sbDeviceCore$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/library/base/src/static/sbLibraryUtils$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
                              $(SONGBIRD_OBJDIR)/components/moz/threads/src/sbMozThreads$(DEBUG:%=_d) \
                              $(NULL)

IS_COMPONENT = 1

SONGBIRD_TEST_COMPONENT = devicedevice

SONGBIRD_TESTS = \
                 $(srcdir)/test_device_utils.js \
                 $(srcdir)/test_device_mock.js \
                 $(NULL)

include $(topsrcdir)/build/rules.mk

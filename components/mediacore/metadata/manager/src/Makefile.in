DEPTH = ../../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbMetadataManager_d
else
target_name = sbMetadataManager
endif

CPP_SRCS = MetadataManager.cpp \
           MetadataValues.cpp \
           MetadataChannel.cpp \
           MetadataBackscanner.cpp \
           MetadataJobManager.cpp \
           MetadataJob.cpp \
           sbMetadataUtils.cpp \
           MetadataManagerComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/metadata/manager/public \
               $(DEPTH)/components/dataremote/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/library/localdatabase/public \
               $(DEPTH)/components/dbengine/public \
               $(DEPTH)/components/sqlbuilder/public \
               $(DEPTH)/components/property/public \
               $(topsrcdir)/components/library/base/src \
               $(topsrcdir)/components/property/src \
               $(topsrcdir)/components/sqlbuilder/src \
               $(topsrcdir)/components/include \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/intl \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/uconv \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq ($(SB_PLATFORM), macosx)
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

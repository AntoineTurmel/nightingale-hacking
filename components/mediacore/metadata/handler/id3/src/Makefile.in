DEPTH = ../../../../../../
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbMetadataHandlerID3_d
else
target_name = sbMetadataHandlerID3
endif

ifeq (win32,$(SB_PLATFORM))
CPP_EXTRA_DEFS = -DID3LIB_LINKOPTION=3 \
                 $(NULL)
endif

CPP_SRCS = MetadataHandlerID3.cpp \
           MetadataHandlerID3Component.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/metadata/manager/public \
               $(ID3LIB_DIR)/include \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plc4 \
                            plds4 \
                            xpcom \
                            $(NULL)

ifeq (win32,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += id3lib \
                               xul \
                               unicharutil_s \
                               $(NULL)
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS = $(MOZSDK_LIB_DIR)/libunicharutil_s \
                               $(NULL)
  DYNAMIC_LIB_EXTRA_IMPORTS += xul \
                               id3 \
                               $(NULL)
endif

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_OBJS += $(MOZSDK_LIB_DIR)/XUL 
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs \
                               id3 \
                               $(NULL)
endif

DYNAMIC_LIB_IMPORT_PATHS = $(ID3LIB_DIR)/lib \
                           $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

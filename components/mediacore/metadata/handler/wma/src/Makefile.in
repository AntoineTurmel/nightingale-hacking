DEPTH = ../../../../../../
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbMetadataHandlerWMA_d
else
target_name = sbMetadataHandlerWMA
endif

ifeq (win,$(SB_PLATFORM))
CPP_EXTRA_DEFS = -DWMALIB_LINKOPTION=3 \
                 $(NULL)
endif

CPP_SRCS = MetadataHandlerWMA.cpp \
           MetadataHandlerWMAComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/metadata/manager/public \
               $(WMALIB_DIR)/include \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

IS_COMPONENT = 1

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (win,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += WMVCORE \
                               ole32 \
                               unicharutil_external_s \
                               $(NULL)
endif

DYNAMIC_LIB_IMPORT_PATHS = $(WMALIB_DIR)/lib \
                           $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

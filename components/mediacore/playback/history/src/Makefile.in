DEPTH     = ../../../../..
topsrcdir = @top_srcdir@
srcdir    = @srcdir@
VPATH     = @srcdir@

include $(DEPTH)/build/autodefs.mk

target_name = sbPlaybackHistoryService$(DEBUG:%=_d)

CPP_SRCS = sbPlaybackHistoryEntry.cpp \
           sbPlaybackHistoryService.cpp \
           sbPlaybackHistoryModule.cpp \
           $(NULL)

CPP_INCLUDES = \
      $(topsrcdir)/components/dbengine/src \
      $(DEPTH)/components/dbengine/public \
      $(DEPTH)/components/mediacore/playback/history/public \
      $(DEPTH)/components/library/base/public \
      $(DEPTH)/components/property/public \
      $(DEPTH)/components/sqlbuilder/public \
      $(topsrcdir)/components/sqlbuilder/src \
      $(MOZSDK_INCLUDE_DIR) \
      $(MOZSDK_INCLUDE_DIR)/nspr \
      $(MOZSDK_INCLUDE_DIR)/xpcom \
      $(MOZSDK_INCLUDE_DIR)/string \
      $(MOZSDK_INCLUDE_DIR)/necko \
      $(MOZSDK_INCLUDE_DIR)/pref \
      $(MOZSDK_IDL_DIR) \
      $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

DYNAMIC_LIB_STATIC_IMPORTS += \
  $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
  $(SONGBIRD_OBJDIR)/components/moz/threads/src/sbMozThreads$(DEBUG:%=_d) \

LIBSONGBIRD_COMPONENT = SongbirdPlaybackHistoryServiceModule
SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk

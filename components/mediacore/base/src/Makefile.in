DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target := sbMediacoreBase$(DEBUG:%=_d)

CPP_SRCS = sbBaseMediacore.cpp \
           sbBaseMediacoreFactory.cpp \
           sbBaseMediacorePlaybackControl.cpp \
           sbBaseMediacoreVolumeControl.cpp \
           sbMediacoreCapabilities.cpp \
           sbMediacoreError.cpp \
           sbMediacoreEvent.cpp \
           sbMediacoreVotingChain.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/base/public \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/moz/strings/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(NULL)

DYNAMIC_LIB = $(target)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

moz_utils = sbMozStringUtils$(DEBUG:%=_d)

DYNAMIC_LIB_STATIC_IMPORTS += $(SONGBIRD_OBJDIR)/components/moz/strings/src/$(moz_utils)

LIBSONGBIRD_COMPONENT = SongbirdMediacoreBase

IS_COMPONENT = 1

include $(topsrcdir)/build/rules.mk

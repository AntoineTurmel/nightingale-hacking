DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

SONGBIRD_TEST_COMPONENT = mediacorebase

XPIDL_SRCS = sbITestMediacoreEventCreator.idl \
             $(NULL)

XPIDL_INCLUDES = $(topsrcdir)/components/mediacore/base/public \
                 $(NULL)

XPIDL_MODULE = sbTestMediacoreBase.xpt

XPIDL_MODULE_TYPELIBS = $(XPIDL_SRCS:.idl=.xpt)

CPP_SRCS = sbTestMediacoreBaseModule.cpp \
           sbTestDummyMediacoreManager.cpp \
           sbTestMediacoreEventCreator.cpp \
           sbTestMediacoreStressThreads.cpp \
           $(topsrcdir)/components/mediacore/base/src/sbMediacoreEvent.cpp \
           $(topsrcdir)/components/mediacore/base/src/sbBaseMediacoreEventTarget.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/base/public \
               $(DEPTH)/components/mediacore/base/test \
               $(DEPTH)/components/mediacore/manager/public \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/mediacore/base/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(NULL)
               
DYNAMIC_LIB = sbTestMediacoreBase$(DEBUG:%=_d)$(DLL_SUFFIX)
               
DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) $(XPIDL_MODULE)


SONGBIRD_TESTS = $(srcdir)/test_BaseMediacoreEventTarget.js \
                 $(srcdir)/test_BaseMediacoreEventTargetThreaded.js \
                 $(NULL)

include $(topsrcdir)/build/rules.mk

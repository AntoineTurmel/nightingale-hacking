DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target := sbMediacoreManager
ifdef DEBUG
target := $(addsuffix _d,$(target))
endif

CPP_SRCS = sbMediacoreManager.cpp \
           sbMediacoreManagerModule.cpp \
           sbMediacoreTypeSniffer.cpp \
           $(topsrcdir)/components/mediacore/base/src/sbMediacoreVotingChain.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/base/public \
               $(DEPTH)/components/mediacore/manager/public \
               $(DEPTH)/components/mediaimport/playlist/public \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/mediacore/base/src \
               $(topsrcdir)/components/moz/strings/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/embedcomponents \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/uriloader \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(NULL)

DYNAMIC_LIB = $(target)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(notdir $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

ifdef DEBUG
moz_utils = sbMozStringUtils_d
else
moz_utils = sbMozStringUtils
endif

DYNAMIC_LIB_STATIC_IMPORTS += $(SONGBIRD_OBJDIR)/components/moz/strings/src/$(moz_utils)

LIBSONGBIRD_COMPONENT = SongbirdMediacoreManager

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(NULL)

include $(topsrcdir)/build/rules.mk

DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

SUBDIRS = \
  static \
  $(NULL)

include $(DEPTH)/build/autodefs.mk

target := sbLibraryManager
ifdef DEBUG
target := $(addsuffix _d,$(target))
endif

CPP_SRCS = sbLibraryConstraints.cpp \
           sbLibraryManager.cpp \
           sbLibraryManagerModule.cpp \
           sbMediaItemWatcher.cpp \
           sbMediaListViewMap.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/property/public \
               $(topsrcdir)/components/library/base/src/static/ \
               $(topsrcdir)/components/include \
               $(topsrcdir)/components/moz/strings/src \
               $(topsrcdir)/components/library/base/src \
               $(topsrcdir)/components/property/src \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/embedcomponents \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(NULL)

DYNAMIC_LIB = $(target)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

DYNAMIC_LIB_STATIC_IMPORTS += \
  $(SONGBIRD_OBJDIR)/components/library/base/src/static/sbLibraryUtils$(DEBUG:%=_d) \
  $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
  $(SONGBIRD_OBJDIR)/components/moz/threads/src/sbMozThreads$(DEBUG:%=_d) \
  $(NULL)

LIBSONGBIRD_COMPONENT = SongbirdLibraryManager

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(srcdir)/sbLibraryUtils.jsm \
                      $(srcdir)/sbStorageFormatter.jsm \
                      $(srcdir)/sbTimeFormatter.jsm \
                      $(srcdir)/sbColumnSpecParser.jsm \
                      $(srcdir)/sbLibrarySearchSuggester.js \
                      $(NULL)

# TODO: Post 0.5 we need to remove js modules from the line above
SONGBIRD_JSMODULES = $(srcdir)/sbLibraryUtils.jsm \
                     $(srcdir)/sbStorageFormatter.jsm \
                     $(srcdir)/sbTimeFormatter.jsm \
                     $(srcdir)/sbColumnSpecParser.jsm \
                      $(srcdir)/sbSmartMediaListColumnSpecUpdater.jsm \
                     $(NULL)

include $(topsrcdir)/build/rules.mk

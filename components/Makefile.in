DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

SUBDIRS = addonmetadata \
          bundle \
          commandline \
          contenthandling \
          dataremote \
          dbengine \
          devices \
          devicesobsolete \
          displaypanes \
          draganddrop \
          faceplate \
          feathers \
          integration \
          intl \
          job \
          library \
          jscodelib \
          mediacore \
          mediaimport \
          mediapages \
          metrics \
          moz \
          parsererror \
          playlistplayback \
          playlistcommands \
          property \
          remoteapi \
          search \
          servicepane \
          sqlbuilder \
          update \
          $(NULL)

ifeq (1,$(SB_ENABLE_TEST_HARNESS))
SUBDIRS += testharness
endif

SUBDIRDEPS  = mediacore : library job moz mediaimport
SUBDIRDEPS2 = playlistreader : library
SUBDIRDEPS3 = devicesobsolete : library mediacore
SUBDIRDEPS4 = integration : devicesobsolete
SUBDIRDEPS5 = library : sqlbuilder moz intl property metrics job dbengine
SUBDIRDEPS6 = remoteapi : library moz
SUBDIRDEPS7 = contenthandling : playlistplayback
SUBDIRDEPS8 = devices : library property
SUBDIRDEPS9 = testharness : moz

ifdef SB_ENABLE_STATIC
SUBDIRS += static

endif # SB_ENABLE_STATIC

include $(topsrcdir)/build/rules.mk

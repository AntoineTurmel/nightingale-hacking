DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

SUBDIRS = aboutprotocol \
          addonmetadata \
          albumart \
          bundle \
          commandline \
          contenthandling \
          dataremote \
          dbengine \
          devices \
          devicesobsolete \
          displaypanes \
          draganddrop \
          faceplate \
          feathers \
          integration \
          intl \
          job \
          library \
          jscodelib \
          mediacore \
          mediaimport \
          mediapages \
          metrics \
          moz \
          parsererror \
          playlistcommands \
          property \
          remoteapi \
          search \
          servicepane \
          sqlbuilder \
          update \
          controller \
          webservices \
          $(NULL)

ifeq (1,$(SB_ENABLE_TEST_HARNESS))
SUBDIRS += testharness
endif

# Kinda weird logic; if we're on the mac, but not 10.5 SDK, we don't want to 
# build filesystemevents (see bug 14218); in all other cases, we do, so
# invert the test.
ifneq (macosx_,$(SB_PLATFORM)_$(SB_MACOSX_SDK_10_5))
   SUBDIRS += filesystemevents
endif

SUBDIRDEPS = library : sqlbuilder moz intl property metrics job dbengine
SUBDIRDEPS2 = playlistreader : library
SUBDIRDEPS3 = devicesobsolete : library mediacore
SUBDIRDEPS4 = integration : devicesobsolete controller
SUBDIRDEPS5  = mediacore : dataremote job moz mediaimport property library albumart
SUBDIRDEPS6 = remoteapi : library mediacore moz
SUBDIRDEPS7 = contenthandling : mediacore library
SUBDIRDEPS8 = devices : library property mediacore
SUBDIRDEPS9 = testharness : moz
SUBDIRDEPS10 = property : intl
SUBDIRDEPS11 = albumart : library moz property

ifdef SB_ENABLE_STATIC
SUBDIRS += static

endif # SB_ENABLE_STATIC

include $(topsrcdir)/build/rules.mk

DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target_name = sbTestHarness

CPP_SRCS = sbLeakCanary.cpp \
           sbTestHarnessModule.cpp \
           sbTestHarnessConsoleListener.cpp \
           sbTimingService.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/testharness/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/locale \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_IDL_DIR) \
               $(topsrcdir)/components/moz/strings/src \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)
                            
DYNAMIC_LIB_STATIC_IMPORTS =  $(SONGBIRD_OBJDIR)/components/moz/strings/src/sbMozStringUtils$(DEBUG:%=_d) \
                              $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

ifeq ($(SB_PLATFORM), windows)
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s \
                               $(NULL)
endif

ifeq ($(SB_PLATFORM), macosx)
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

LIBSONGBIRD_COMPONENTS = sbTestHarnessConsoleListenerModule

SONGBIRD_COMPONENTS = $(srcdir)/sbTestHarness.js \
                      $(srcdir)/httpd.js \
                      $(NULL)

IS_COMPONENT = 1

include $(topsrcdir)/build/rules.mk

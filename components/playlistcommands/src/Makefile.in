DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbPlaylistCommands_d
else
target_name = sbPlaylistCommands
endif

CPP_SRCS = PlaylistCommandsManager.cpp \
           PlaylistCommandsComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/playlistcommands/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/dom \
               $(MOZSDK_INCLUDE_DIR)/intl \
               $(MOZSDK_INCLUDE_DIR)/xultmpl \
               $(MOZSDK_INCLUDE_DIR)/content \
               $(MOZSDK_INCLUDE_DIR)/widget \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq ($(SB_PLATFORM), macosx)
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

LIBSONGBIRD_COMPONENT = SongbirdPlaylistCommandsComponent


SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(srcdir)/sbPlaylistCommandsBuilder.js \
                      $(srcdir)/sbPublicPlaylistCommands.js \
                      $(srcdir)/sbAddToPlaylist.jsm \
                      $(srcdir)/kPlaylistCommands.jsm \
                      $(NULL)
                      
# TODO: Post 0.5 we need to remove js modules from the line above
SONGBIRD_JSMODULES =  $(srcdir)/sbAddToPlaylist.jsm \
                      $(srcdir)/kPlaylistCommands.jsm \
                      $(NULL)

include $(topsrcdir)/build/rules.mk

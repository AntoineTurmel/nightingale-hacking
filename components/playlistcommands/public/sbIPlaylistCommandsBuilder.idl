interface sbIPlaylistCommandsBuilderGetStringCallback : nsISupports
{
  AString handleCallback(in sbIPlaylistCommandsContext aContext,
                         in AString aSubMenuId,
                         in AString aCommandId,
                         in AString aHost,
                         in AString aData);
};

[scriptable, function, uuid(e589b7fc-2b8b-4ad4-bdc5-42eaa5d9fbd1)]
interface sbIPlaylistCommandsBuilderGetBoolCallback : nsISupports
{
  PRBool handleCallback(in sbIPlaylistCommandsContext aContext,
                        in AString aSubMenuId,
                        in AString aCommandId,

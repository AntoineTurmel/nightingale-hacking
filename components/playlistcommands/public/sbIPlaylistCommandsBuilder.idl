interface sbIPlaylistCommandsBuilderInstantiationCallback : nsISupports
{
  nsIDOMElement handleCallback(in sbIPlaylistCommandsContext aContext,
                                    in AString aSubMenuId,
                                    in AString aCommandId,
                                    in AString aHost);
};


[scriptable, uuid(4a0c2d37-762b-4480-8d2b-f169430a98ea)]
interface sbIPlaylistCommandsBuilder : sbIPlaylistCommands 
{
  PRBool appendSubmenu(in AString aParentSubMenuId, 
                       in AString aSubMenuId, 
                       in AString aLabel, 
                       in AString aTooltipText);
  
  PRBool insertSubmenuBefore(in AString aParentSubMenuId, 
                             in AString aBeforeId, 
                             in AString aSubMenuId, 
                             in AString aLabel, 
                             in AString aTooltipText);

  PRBool insertSubmenuAfter(in AString aParentSubMenuId, 
                            in AString aAfterId, 
                            in AString aSubMenuId, 
                            in AString aLabel, 
                            in AString aTooltipText);
  
  // --------------------------------------------------------------------------

  PRBool appendAction(in AString aParentSubMenuId, 
                      in AString aCommandId,
                      in AString aLabel, 
                      in AString aTooltipText, 
                      in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);
  
  PRBool insertActionBefore(in AString aParentSubMenuId, 
                            in AString aBeforeId,
                            in AString aCommandId,
                            in AString aLabel, 
                            in AString aTooltipText, 
                            in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);

  PRBool insertActionAfter(in AString aParentSubMenuId, 
                           in AString aAfterId,
                           in AString aCommandId,
                           in AString aLabel, 
                           in AString aTooltipText, 
                           in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);

  // --------------------------------------------------------------------------

  PRBool appendSeparator(in AString aParentSubMenuId, 
                         in AString aSeparatorId);

  PRBool insertSeparatorBefore(in AString aParentSubMenuId, 
                               in AString aBeforeId,
                               in AString aSeparatorId);
  
  PRBool insertSeparatorAfter(in AString aParentSubMenuId,
                              in AString aAfterId,
                              in AString aSeparatorId);

  // --------------------------------------------------------------------------

  PRBool appendFlag(in AString aParentSubMenuId, 
                    in AString aCommandId,
                    in AString aLabel, 
                    in AString aTooltipText, 
                    in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback,
                    in sbIPlaylistCommandsBuilderGetBoolCallback aValueCallback);

  PRBool insertFlagBefore(in AString aParentSubMenuId, 
                          in AString aBeforeId,
                          in AString aCommandId,
                          in AString aLabel, 
                          in AString aTooltipText, 
                          in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback,
                          in sbIPlaylistCommandsBuilderGetBoolCallback aGetValueCallback);

  PRBool insertFlagAfter(in AString aParentSubMenuId, 
                         in AString aAfterId,
                         in AString aCommandId,
                         in AString aLabel, 
                         in AString aTooltipText, 
                         in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback,
                         in sbIPlaylistCommandsBuilderGetBoolCallback aGetValueCallback);

  // --------------------------------------------------------------------------

  PRBool appendValue(in AString aParentSubMenuId, 
                     in AString aCommandId,
                     in AString aLabel, 
                     in AString aTooltipText, 
                     in sbIPlaylistCommandsBuilderSetValueCallback aSetValueCallback,
                     in sbIPlaylistCommandsBuilderGetStringCallback aGetValueCallback);

  PRBool insertValueBefore(in AString aParentSubMenuId, 
                           in AString aBeforeId,
                           in AString aCommandId,
                           in AString aLabel, 
                           in AString aTooltipText, 
                           in sbIPlaylistCommandsBuilderSetValueCallback aSetValueCallback,
                           in sbIPlaylistCommandsBuilderGetStringCallback aGetValueCallback);

  PRBool insertValueAfter(in AString aParentSubMenuId, 
                          in AString aAfterId,
                          in AString aCommandId,
                          in AString aLabel, 
                          in AString aTooltipText, 
                          in sbIPlaylistCommandsBuilderSetValueCallback aSetValueCallback,
                          in sbIPlaylistCommandsBuilderGetStringCallback aGetValueCallback);

  // --------------------------------------------------------------------------

  PRBool appendChoiceMenu(in AString aParentSubMenuId, 
                          in AString aChoiceMenuId,
                          in AString aLabel, 
                          in AString aTooltipText);

  PRBool insertChoiceMenuBefore(in AString aParentSubMenuId, 
                                in AString aBeforeId,
                                in AString aChoiceMenuId,
                                in AString aLabel, 
                                in AString aTooltipText);

  PRBool insertChoiceMenuAfter(in AString aParentSubMenuId, 
                               in AString aAfterId,
                               in AString aChoiceMenuId,
                               in AString aLabel, 
                               in AString aTooltipText);

  // --------------------------------------------------------------------------

  PRBool appendChoiceMenuItem(in AString aParentSubMenuId, 
                              in AString aCommandId,
                              in AString aLabel, 
                              in AString aTooltipText, 
                              in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);

  PRBool insertChoiceMenuItemBefore(in AString aParentSubMenuId, 
                                    in AString aBeforeId,
                                    in AString aCommandId,
                                    in AString aLabel, 
                                    in AString aTooltipText, 
                                    in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);

  PRBool insertChoiceMenuItemAfter(in AString aParentSubMenuId, 
                                   in AString aAfterId,
                                   in AString aCommandId,
                                   in AString aLabel, 
                                   in AString aTooltipText, 
                                   in sbIPlaylistCommandsBuilderSimpleCallback aTriggerCallback);

  // --------------------------------------------------------------------------

  PRBool appendCustomItem(in AString aParentSubMenuId, 
                          in AString aId,
                          in sbIPlaylistCommandsBuilderInstantiationCallback aInstantiationCallback, 
                          in sbIPlaylistCommandsBuilderSimpleCallback aRefreshCallback);
                          
  PRBool insertCustomItemBefore(in AString aParentSubMenuId, 
                                in AString aCommandId,
                                in AString aBeforeId,
                                in sbIPlaylistCommandsBuilderInstantiationCallback aInstantiationCallback, 
                                in sbIPlaylistCommandsBuilderSimpleCallback aRefreshCallback);
                          
  PRBool insertCustomItemAfter(in AString aParentSubMenuId, 
                               in AString aAfterId,
                               in AString aCommandId,
                               in sbIPlaylistCommandsBuilderInstantiationCallback aInstantiationCallback, 
                               in sbIPlaylistCommandsBuilderSimpleCallback aRefreshCallback);
                          
  // --------------------------------------------------------------------------

  PRBool appendPlaylistCommands(in AString aParentSubMenuId, 
                                in AString aCommandId,
                                in sbIPlaylistCommands aPlaylistCommands);

  PRBool insertPlaylistCommandsBefore(in AString aParentSubMenuId, 
                                      in AString aBeforeId,
                                      in AString aCommandId,
                                      in sbIPlaylistCommands aPlaylistCommands);

  PRBool insertPlaylistCommandsAfter(in AString aParentSubMenuId, 
                                     in AString aAfterId,
                                     in AString aCommandId,
                                     in sbIPlaylistCommands aPlaylistCommands);

  // --------------------------------------------------------------------------

  PRBool setCommandShortcut(in AString aParentSubMenuId, 
                            in AString aCommandId, 
                            in AString aShortcutKey,
                            in AString aShortcutKeyCode,
                            in AString aShortcutModifiers,
                            in PRBool aShortcutIsLocal);

  PRBool setCommandEnabledCallback(in AString aParentSubMenuId, 
                                   in AString aCommandId, 
                                   in sbIPlaylistCommandsBuilderGetBoolCallback aEnabledCallback);

  PRBool setCommandVisibleCallback(in AString aParentSubMenuId, 
                                   in AString aCommandId, 
                                   in sbIPlaylistCommandsBuilderGetBoolCallback aVisibleCallback);


  PRBool removeCommand(in AString aParentSubMenuId,
                       in AString aCommandId);

  PRBool removeAllCommands();

};



DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbMediaLibrary_d
else
target_name = sbMediaLibrary
endif

CPP_SRCS = MediaScan.cpp \
           MediaLibraryComponent.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/medialibrary/public \
               $(DEPTH)/components/dbengine/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/unicharutil \
               $(MOZSDK_IDL_DIR) \
               $(SQLITE_DIR)/include \
               $(NULL)

IS_COMPONENT = 1

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s \
                               $(NULL)
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS += $(MOZSDK_LIB_DIR)/libunicharutil_external_s \
                                $(NULL)
endif

ifeq (win32,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s \
                               $(NULL)
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(COMPONENTS_DIR)/medialibrary/src/sbMediaLibrary.js \
                      $(COMPONENTS_DIR)/medialibrary/src/sbPlaylistModule.js \
                      $(COMPONENTS_DIR)/medialibrary/src/sbPlaylistManager.js \
                      $(COMPONENTS_DIR)/medialibrary/src/sbPlaylistReader*.js \
                      $(COMPONENTS_DIR)/medialibrary/src/sbPlaylistWriter*.js \
                      $(COMPONENTS_DIR)/medialibrary/src/sbSimplePlaylist.js \
                      $(NULL)
                      
SONGBIRD_SCRIPTS = $(COMPONENTS_DIR)/medialibrary/src/sbDynamicPlaylist.js \
                   $(COMPONENTS_DIR)/medialibrary/src/sbPlaylist.js \
                   $(COMPONENTS_DIR)/medialibrary/src/sbPlaylistBase.js \
                   $(COMPONENTS_DIR)/medialibrary/src/sbSmartPlaylist.js \
                   $(NULL)

include $(topsrcdir)/build/rules.mk

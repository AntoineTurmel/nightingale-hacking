DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbBrowserAPI_d
moz_utils = sbMozStringUtils_d
else
target_name = sbBrowserAPI
moz_utils = sbMozStringUtils
endif

CPP_SRCS = sbSecurityMixin.cpp \
           sbRemoteLibrary.cpp \
           sbRemotePlayer.cpp \
           sbRemoteCommands.cpp \
           sbRemoteMediaList.cpp \
           sbRemoteMediaItem.cpp \
           sbRemoteAPIModule.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/remoteapi/public \
               $(DEPTH)/components/playlistplayback/public \
               $(DEPTH)/components/playlistsource/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/dataremote/public \
               $(DEPTH)/bindings/public \
               $(topsrcdir)/components/moz/strings/src \
               $(topsrcdir)/components/library/localdatabase/src \
               $(topsrcdir)/components/remoteapi/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/appshell \
               $(MOZSDK_INCLUDE_DIR)/caps \
               $(MOZSDK_INCLUDE_DIR)/content \
               $(MOZSDK_INCLUDE_DIR)/docshell \
               $(MOZSDK_INCLUDE_DIR)/dom \
               $(MOZSDK_INCLUDE_DIR)/gfx \
               $(MOZSDK_INCLUDE_DIR)/js \
               $(MOZSDK_INCLUDE_DIR)/layout \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/rdf \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/widget \
               $(MOZSDK_INCLUDE_DIR)/windowwatcher \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/xpconnect \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX))

DYNAMIC_LIB_STATIC_IMPORTS = $(DEPTH)/components/moz/strings/src/$(moz_utils)

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            plds4  \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += mozjs
endif

ifeq (windows,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += js3250
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR)

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(NULL)

include $(topsrcdir)/build/rules.mk
